
CREATE TABLE PRODUTO (
    CODIGO  INTEGER NOT NULL,
    NOME    VARCHAR(50),
    VALOR   NUMERIC(15,2)
);

ALTER TABLE PRODUTO ADD CONSTRAINT PK_PRODUTO PRIMARY KEY (CODIGO);


CREATE TABLE PRODUTO_DESCONTO (
    CODIGO      INTEGER NOT NULL,
    QUANTIDADE  INTEGER,
    VALOR       NUMERIC(15,2)
);

ALTER TABLE PRODUTO_DESCONTO ADD CONSTRAINT PK_PRODUTO_DESCONTO PRIMARY KEY (CODIGO);

ALTER TABLE PRODUTO_DESCONTO ADD CONSTRAINT FK_PRODUTO_DESCONTO_1 FOREIGN KEY (CODIGO) REFERENCES PRODUTO (CODIGO);


